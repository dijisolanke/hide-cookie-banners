{
  "manifest_version": 3,
  "name": "Hide Cookie Banners",
  "version": "1.0",
  "description": "Automatically hides cookie policy banners by setting their display to none.",
  "permissions": ["scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Hide Cookie Banners",
    "default_icon": {
      "16": "./cookie.png",
      "48": "./cookie.png",
      "128": "./cookie.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
